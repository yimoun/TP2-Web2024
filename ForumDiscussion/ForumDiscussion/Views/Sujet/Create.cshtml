@model SujetCreateVM
@{
    ViewData["Title"] = "Créer un nouveau sujet";
}

<div id="create-member-page">
    <div class="row">
        <div class="offset-md-1 offset-lg-2 col-md-10 col-lg-8">
            <div class="page-title">
                <h2>Création d'un nouveau sujet</h2>
            </div>

            <div class="form-section">
                <form asp-action="Create">
                    <input type="hidden" asp-for="sujet.Id" />

                    <div class="form-horizontal">
                        <hr />
                            <div class="form-group row">
                                <label asp-for="sujet.Titre" class="col-form-label col-md-3"></label>
                                <div class="col-md-9">
                                    <input asp-for="sujet.Titre" class="form-control" />
                                    <span asp-validation-for="sujet.Titre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="message.Contenu" class="col-form-label col-md-3"></label>
                                <div class="col-md-9">
                                    <input asp-for="message.Contenu" class="form-control" />
                                    <span asp-validation-for="message.Contenu" class="text-danger"></span>
                                </div>
                            </div>
                        <hr />
                        <div class="text-center">
                            <input type="submit" value="Créer un nouveau sujet" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="links">
                <a asp-controller="Auth" asp-action="Login">Retour à l'accueil</a>
            </div>
        </div>
    </div>
</div>
