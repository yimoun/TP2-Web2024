@model List<MessageModel>
@{
    ViewData["Title"] = "Liste des sections";
}

<div id="dashboard-page" class="container">
    <div class="row">
        <div class="col-12">
            <div class="page-title">
                <h2>
                    <i class="fas fa-list"></i>
                    Liste des sections
                </h2>
            </div>
        </div>

        <div class="row">

            <table class="table table-sm table-bordered table-striped table-hover">
                <tr>
                    <th class="description">@Html.DisplayNameFor(model => model[0].Auteur)</th>
                    <th class="description">@Html.DisplayNameFor(model => model[0].Contenu)</th>
                    <th class="description">@Html.DisplayNameFor(model => model[0].NbLike)</th>
                    <th class="description">@Html.DisplayNameFor(model => model[0].NbDislike)</th>
                    <th class="description">@Html.DisplayNameFor(model => model[0].NbView)</th>
                </tr>
                @if (Model.Count > 0)
                {
                    foreach (MessageModel m in Model)
                    {
                        <tr>
                            <td class="description">@Html.DisplayFor(model => m.Auteur)</td>
                            <td class="description">@Html.DisplayFor(model => m.Contenu)</td>
                            <td class="description">@Html.DisplayFor(model => m.NbLike)</td>
                            <td class="description">@Html.DisplayFor(model => m.NbDislike)</td>
                            <td class="description">@Html.DisplayFor(model => m.NbView)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">Aucun message trouvée.</td>
                    </tr>
                }
            </table>

        </div>

        <div class="row">
            <div class="col-md-12">
                <a asp-action="Create" class="btn btn-primary">Répondre</a>
            </div>
        </div>

        @* <p><a asp-action="Create">Ajouter un choix Menu</a></p> *@
    </div>
</div>
