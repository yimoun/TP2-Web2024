@model Section
@{
    string textAction = "Ajouter";
    string formAction = "Create";

    if (Model.Id > 0)
    {
        textAction = "Modifier";
        formAction = "Edit";
    }

    ViewData["Title"] = textAction + "une section";
}

<div id="product-createedit-page" class="container-fluid">
    <div class="row">
        <div class="offset-md-1 offset-lg-2 col-md-10 col-lg-8">
            <div class="page-title">
                <h2>
                    <i class="fas fa-list"></i>
                    @textAction une section
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="form-section">
                <form asp-action="@formAction">
                    <input type="hidden" asp-for="Id" /> @*Pas besoin de l'afficher il sera passé dans l'url*@
                    <div class="form-horizontal">
                        <hr />
                        <div class="form-group row">
                            <label asp-for="Titre" class="col-form-label col-md-3 gauche"></label>
                            <div class="col-md-9 gauche">
                                <input asp-for="Titre" class="form-control" />
                                <span asp-validation-for="Titre" class="text-danger"></span>
                            </div>
                        </div>
                        <hr />
                    </div>
                    <div class="form-horizontal">
                        <hr />
                        <div class="form-group row">
                            <label asp-for="Description" class="col-form-label col-md-3 gauche"></label>
                            <div class="col-md-9 gauche">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <hr />
                    </div>
                    <div class="text-center">
                        <input type="submit" value="@textAction" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class=" col-md-12 links">
                <a asp-action="List">Retour à la liste des sections</a>
            </div>
        </div>

    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
