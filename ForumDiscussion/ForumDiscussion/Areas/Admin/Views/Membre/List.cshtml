@model List<Membre>
@{
    ViewData["Title"] = "Liste des membres";
}

<div id="member-list-page">
    <div class="row">
        <div class="col-12">
            <div class="page-title">
                <h2>Liste des membres</h2>
            </div>
            
            <div class="CreateNewAccount">
                <a asp-area="Admin" asp-controller="Membre" asp-action="Create">Creer un nouveau compte</a>
            </div>

            <table class="table table-sm table-bordered table-striped table-hover">
                <tr>
                    <th>@Html.DisplayNameFor(model => model[0].Pseudo)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Courriel)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Username)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Role)</th>
                    <th class="action">Actions</th>
                </tr>
                @if (Model.Count > 0)
                {
                    foreach (Membre membre in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => membre.Pseudo)</td>
                            <td>@Html.DisplayFor(model => membre.Courriel)</td>
                            <td>@Html.DisplayFor(model => membre.Username)</td>
                            <td>@Html.DisplayFor(model => membre.Role)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@membre.Id">
                                    <span class="edit-icon" data-id="1" title="Modifier"/>
                                        <i class="fas fa-edit"></i>
                                </a>   |
                                <a asp-action="Delete" asp-route-id="@membre.Id">
                                    <span class="delete-icon" data-id="1" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2">Aucun membre trouvé !</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
